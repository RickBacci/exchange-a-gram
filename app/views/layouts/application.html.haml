!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title ExchangeAGram
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container-fluid
      .row
        .col-md-6.col-md-offset-3
          -if current_user
            =link_to 'View Profile', user_path(current_user), class: "profile"
            =link_to 'logout', logout_path, method: :delete, class: "logout"
          -else
            =link_to 'login', login_path, role: 'button', class: "login btn btn-primary"
          -# -if current_user
          -#   =render 'shared/nav'

          = yield
