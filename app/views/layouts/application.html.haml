!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title InstagramWorkshop
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container-fluid
      .row
        .col-md-6.col-md-offset-3
          -if current_user
            =link_to 'logout', logout_path, method: :delete, role: 'button', class: "logout btn btn-primary"

            =link_to 'View Profile', user_path(current_user), role: 'button', class: "profile btn btn-primary"
          -else
            =link_to 'login', login_path, role: 'button', class: "login btn btn-primary"


          = yield
